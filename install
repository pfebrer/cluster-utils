#!/bin/bash

INIT_FILE=${INIT_FILE:-$HOME/.bashrc}
ACTIVATE_SCRIPT="$(dirname $(realpath "${BASH_SOURCE}"))"/activate
BIN_DIR="$(dirname "${ACTIVATE_SCRIPT}")/bin"

echo "# Added by cluster-utils. Do not modify if you want automatic uninstall" >> "${INIT_FILE}"
echo "export PATH=${BIN_DIR}:\${PATH}" >> "${INIT_FILE}"
echo "source $ACTIVATE_SCRIPT" >> "${INIT_FILE}"
echo "# End of cluster-utils" >> "${INIT_FILE}"

touch "$(dirname "${ACTIVATE_SCRIPT}")/.installed"
